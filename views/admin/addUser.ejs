<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body >
 <div class="container" style="text-align: center; align-items: center; padding-top: 30px;" >
  <h1>ADD NEW USER</h1>
  <form action="" method="post" >
      <input type="text" name="name" id="name" placeholder="Eneter name" required>
      <p id="er1" style="color: red;"></p>
      <br>
      <br>
      <input type="email" name="email" id="email" placeholder="Eneter email" required>
      <p id="er2" style="color: red;"></p>
      <br>
      <br>
      <input type="number" name="mobile" id="mobile" placeholder="Eneter mobile num" required>
      <p id="er3" style="color: red;"></p>
      <br>
      <br>
      <input type="submit" value="ADD USER" onclick="validation()">
  </form>
  <%
if(typeof message !== 'undefined'){
  %>
  <h4 style="color: red;"><%= message %></h4>
  <%
}
%> 

<%
if(typeof alert !== 'undefined'){
  %>
  <h4 style="color: red;"><%= alert %></h4>
  <%
}
%>

<br><br>
<a href="/admin/dashboard">GO BACK</a>

 </div>       
 
 <script>
       
    function validation() {
        
        const name = document.getElementById("name").value;
        const email = document.getElementById("email").value;
        const mobile = document.getElementById("mobile").value;
        
        
    
        if (name === "") {
            document.getElementById('er1').innerText='You must enter the name '
        } else{
            document.getElementById('er1').innerText=''
          }
        
        if (email === "") {
            document.getElementById('er2').innerText='You must enter your email ID '
        } else{
            document.getElementById('er2').innerText=''
          }

        if (mobile === "") {
            document.getElementById('er3').innerText='You must eneter your mobile number'
        } else{
            document.getElementById('er3').innerText=''
          }
        
       
    }
      
  </script>

  
</body>
</html>


    

