<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
   

<div class="container" style="padding-top: 110px;">
  <h1 style="text-align: center;">CREATE A ACCOUNT</h1>
  
  <form action="" method="post">

    <div class="form-group">
      <label for="exampleInputName">Name</label>
      <input type="text" class="form-control" id="name" name="name" required placeholder="Enter name">
      <p id="er1" style="color: red;"></p>
    </div>
  
    <div class="form-group">
      <label for="exampleInputEmail1">Email address</label>
      <input type="email" class="form-control" id="email" name="email" required aria-describedby="emailHelp"
        placeholder="Enter email">
      <p id="er2" style="color: red;"></p>
      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
  
    <div class="form-group">
      <label for="exampleInputMobile">Email address</label>
      <input type="number" class="form-control" id="mobile" name="mobile" placeholder="Enter mobile number">
      <p id="er3" style="color: red;"></p>
    </div>
  
    <div class="form-group">
      <label for="exampleInputPassword1">Password</label>
      <input type="password" class="form-control" id="password" name="password" required placeholder="Password">
      <p id="er4" style="color: red;"></p>
    </div>
  
    <button type="submit" class="btn btn-primary" onclick="validation()">register</button>
  </form>

</div>
  <div class="container" style="padding-top: 10px;">
    <%
    if(typeof message !== 'undefined'){
      %>
      <h4 style="color: rgb(0, 17, 255);"><%= message %></h4>
      <%
    }
   %> 
   <%
   if(typeof alert !== 'undefined'){
     %>
     <h4 style="color: rgb(0, 17, 255);"><%= alert %></h4>
     <%
   }
  %> 
  </div>

<script>
       
    function validation() {
        
        const name = document.getElementById("name").value;
        const email = document.getElementById("email").value;
        const mobile = document.getElementById("mobile").value;
        const password = document.getElementById("password").value;
        
    
        if (name === "") {
            document.getElementById('er1').innerText='You must enter the name '
        } else{
            document.getElementById('er1').innerText=''
          }
        
        if (email === "") {
            document.getElementById('er2').innerText='You must enter yur email ID '
        } else{
            document.getElementById('er2').innerText=''
          }

        if (mobile === "") {
            document.getElementById('er3').innerText='You must eneter your mobile number'
        } else{
            document.getElementById('er3').innerText=''
          }
        
        if (password === "") {
            document.getElementById('er4').innerText='You must provide a password'
        } else{
            document.getElementById('er4').innerText=''
          }
    }
      
  </script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
    integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
    integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
    integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
    crossorigin="anonymous"></script>

  
</body>
</html>


    

